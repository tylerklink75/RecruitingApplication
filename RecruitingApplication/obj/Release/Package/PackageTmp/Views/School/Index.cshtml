@model IEnumerable<Recruiting.Models.SchoolModels.SchoolListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Scouts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SchoolId)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.SchoolName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Region)
        </th>
     
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.SchoolId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SchoolName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.City)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Region)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.State)
    </td>
    <td>
        @Html.ActionLink("UpdateSchool", "Edit", new { id = item.SchoolId }) |
        @Html.ActionLink("SchoolInformation", "Details", new { id = item.SchoolId }) |
        @Html.ActionLink("Remove", "Delete", new { id = item.SchoolId })
    </td>
</tr>
}

</table>
<style>
    table{
        font-family:'Californian FB';
        color:red;
        font-weight:bold;

    }
</style>
